<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/header_background"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/header_background"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:layout_marginTop="-200dp"
            android:src="@drawable/header_food"/>

        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BINUS EZYFOODY"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="-30dp"
            android:textSize="28sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <Button
        android:id="@+id/myOrder"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_margin="20dp"
        android:background="@drawable/mycart_button"
        android:text="My Order"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:onClick="myOrder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="36dp">
        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What do you want to order?"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:gravity="center"/>
        <GridLayout
            android:columnCount="2"
            android:rowCount="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/drinks_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drinks"
                    android:onClick="orderDrinks"/>
                <TextView
                    android:id="@+id/drinks_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drinks"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/snacks_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/snacks"
                    android:onClick="orderSnacks"/>
                <TextView
                    android:id="@+id/snacks_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snacks"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/foods_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/food"
                    android:onClick="orderFoods"/>
                <TextView
                    android:id="@+id/foods_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Foods"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <Button
                    android:id="@+id/topup_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/topup"
                    android:onClick="topUp"/>
                <TextView
                    android:id="@+id/topup_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TopUp"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18sp"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</LinearLayout>